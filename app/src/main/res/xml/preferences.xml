<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="Settings">

  <EditTextPreference
      android:key="pref_receiver_label"
      android:title="Receiver label"
      android:defaultValue="" />

  <EditTextPreference
      android:key="pref_expected_reporting_interval"
      android:title="Expected reporting interval"
      android:summary="Expected maximum minutes between points"
      android:numeric="decimal"
      android:inputType="numberDecimal"
      android:defaultValue="10" />

  <EditTextPreference
      android:key="pref_historical_track_hours"
      android:title="History track length"
      android:summary="Hours of historical track to show on the map"
      android:numeric="decimal"
      android:inputType="numberDecimal"
      android:defaultValue="24" />

  <PreferenceScreen
      android:title="Developer settings">

    <CheckBoxPreference
        android:key="pref_show_log"
        android:title="Show message log"
        android:defaultValue="false" />

    <EditTextPreference
        android:key="pref_receiver_id"
        android:title="Receiver ID"
        android:summary="Do not edit (debugging only)"
        android:defaultValue="" />

  </PreferenceScreen>

</PreferenceScreen>
